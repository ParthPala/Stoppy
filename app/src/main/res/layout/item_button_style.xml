<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <View
        android:id="@+id/preview"
        android:layout_width="@dimen/space_size_40"
        android:layout_height="@dimen/space_size_25"
        android:layout_marginEnd="@dimen/space_size_15"
        android:background="@drawable/btn_style_default" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_styleName"
        android:textSize="@dimen/text_size_15"
        android:textColor="@android:color/black" />
</LinearLayout>
